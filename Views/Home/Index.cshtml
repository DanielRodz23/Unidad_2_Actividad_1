@model IEnumerable<Unidad_2_Actividad_1.Models.ViewModels.IndexViewModel>
@{
    Layout = "MainLayout";
}
<div class="slides">
    <img src="~/images/carousel1.jpg" />
</div>

<h1>Clasificación de los vertebrados</h1>

<div class="clases">
    @foreach (var item in Model)
    {
        <div>
            <a href="~/Home/Especies/@(item.Nombre.Replace(" ","-"))">
                <img src="clases/@(item.Id).jpg" />
                <h1>@item.Nombre</h1>
                <p>@item.Descripcion</p>
            </a>
        </div>
    }
</div>