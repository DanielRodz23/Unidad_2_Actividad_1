@model Unidad_2_Actividad_1.Models.ViewModels.EspecieViewModel
@{
    Layout = "MainLayout";
}

<div class="especieficha1">
    <img src="~/especies/@(Model.Id).jpg" />
    <div>
        <h1>@Model.Nombre</h1>
        <p><label>Clase:</label><a href="~/Home/especies/@(Model.NombreClase.Replace(" ","-"))">@(Model.NombreClase)</a></p>
        <p><label>Peso:</label>@(Model.Peso)kg</p>
        <p><label>Tamaño:</label>@(Model.Tamano)cm</p>
        <p><label>Habitat:</label>@(Model.Habitat)</p>
        <p><label>Descripción:</label></p>
        <p>@(Model.Descripcion)</p>
    </div>

    <a href="~/Home/especies/@(Model.NombreClase.Replace(" ","-"))">Regresar</a>
</div>

